<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.bwie.com.zhaoxixiang1508bjd.view.ShopDetailActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/shop_detail_sdv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        fresco:placeholderImage="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/shop_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="劳力士Rolex 日志型系列 116200 63200 自动机械钢带男表联保正品"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/shop_detail_subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【雅欧国际】：所有商品全新原装正品"
        android:textColor="#ff11" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥42800.00"
            android:textColor="#f4501e"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="促销价格"
            android:textColor="#f4501e"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_detail_salenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="市场价格￥52800.00—52800.00"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_detail_area_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全国:" />

        <TextView
            android:id="@+id/shop_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="包邮"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/shop_detail_store_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="有货" />

        <TextView
            android:id="@+id/shop_detail_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="xx商城" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/shop_detail_shopping"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="立刻购买" />

        <Button
            android:id="@+id/shop_detail_add_cart"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="加入购物车" />

    </LinearLayout>
</LinearLayout>

